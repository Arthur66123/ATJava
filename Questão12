import java.util.Scanner;

public class SistemaTrocaMensagens {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Solicita os nomes dos usu치rios
        System.out.print("Digite o nome do primeiro usu치rio: ");
        String usuario1 = scanner.nextLine();
        System.out.print("Digite o nome do segundo usu치rio: ");
        String usuario2 = scanner.nextLine();

        // Array para armazenar as mensagens trocadas
        String[] mensagens = new String[10];

        // Loop para alternar as mensagens
        for (int i = 0; i < 10; i++) {
            if (i % 2 == 0) {
                // Usu치rio 1 envia a mensagem
                System.out.print(usuario1 + ", digite sua mensagem: ");
                mensagens[i] = scanner.nextLine();
            } else {
                // Usu치rio 2 envia a mensagem
                System.out.print(usuario2 + ", digite sua mensagem: ");
                mensagens[i] = scanner.nextLine();
            }
        }

        // Exibe o hist칩rico de mensagens
        System.out.println("\n===== Hist칩rico de Mensagens =====");
        for (int i = 0; i < 10; i++) {
            if (i % 2 == 0) {
                System.out.println(usuario1 + ": " + mensagens[i]);
            } else {
                System.out.println(usuario2 + ": " + mensagens[i]);
            }
        }

        // Mensagem final de despedida
        System.out.println("\nObrigado por utilizarem o sistema! Boa sorte para voc칡s! 游");

        scanner.close();
    }
}
